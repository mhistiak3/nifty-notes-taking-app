<!DOCTYPE html>
<html lang="en">
<%- include("./partials/header.ejs") %> 
<body class="dark-theme">
    <%- include("./partials/nav.ejs") %> 
    <div class="container mx-auto py-8">
        <div class="w-full max-w-md mx-auto bg-gray-800 shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <h2 class="text-3xl font-bold mb-6 text-center">Profile</h2>
            <form>
                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2" for="full-name">Full Name</label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="full-name" type="text" placeholder="Full Name" required>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2" for="username">Username</label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username" value="User123" disabled>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2" for="email">Email</label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Email" value="user@example.com" disabled>
                </div>
                <div class="mb-4">
                    <label class="block text-sm font-bold mb-2" for="profile-picture">Profile Picture</label>
                    <div class="flex items-center">
                        <input type="file" id="profile-picture" class="hidden">
                        <label for="profile-picture" class="btn-purple text-white font-bold py-2 px-4 rounded cursor-pointer">
                            <i class="fas fa-upload"></i> Upload Image
                        </label>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <button class="btn-purple text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
                        Save Changes
                    </button>
                    <button class="bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
                        Delete Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
